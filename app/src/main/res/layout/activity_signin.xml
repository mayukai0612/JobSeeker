<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/app_bgd"
    >

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Log in with LinkedIn"
        android:id="@+id/btn_linkedin"
        android:background="@drawable/btn_createprofile_design"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:textColor="#ffffff" />



    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="200dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_loginemail"
        android:layout_above="@+id/et_loginpw"
        android:hint="Eamil"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_loginpw"
        android:hint="Password"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Log in"
        android:id="@+id/btn_seek_signin"
        android:background="@drawable/btn_signup_design"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/et_loginpw"
        android:layout_centerHorizontal="true"
        android:textColor="#808080" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/textView3"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>