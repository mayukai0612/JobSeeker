<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/app_bgd">


    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_signup_design"
        android:text="sign up"
        android:textColor="#808080"
        android:id="@+id/btn_signup_finish"
        android:onClick="login"
        android:layout_below="@+id/et_signuppwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign up"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_signupfn"
        android:hint="First name"
        android:textSize="16sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_above="@+id/et_signupln"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_signupln"
        android:hint="Last name"
        android:textSize="16sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_signupemail"
        android:hint="Email"
        android:textSize="16sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/et_signupln"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_signuppwd"
        android:hint="Password"
        android:textSize="16sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_signupemail"
        android:layout_centerHorizontal="true" />

    <com.yukai.monash.student_seek.RoundImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/favorite_icon"
        android:text="add "
        app:civ_border_width="2dp"
        app:civ_border_color="#808080"
        android:layout_marginLeft="40dp"
        android:id="@+id/addphoto"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Add your photo"
        android:id="@+id/textView18"
        android:layout_marginTop="41dp"
        android:textSize="12sp"
        android:layout_alignTop="@+id/addphoto"
        android:layout_centerHorizontal="true" />

</RelativeLayout>