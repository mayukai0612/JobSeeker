<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bgd">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/line_button"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="50dp">
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Create Profile"
        android:id="@+id/btn_createProfile"
        android:background="@drawable/btn_signup_design"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/btn_sign_up"
        android:layout_alignStart="@+id/btn_sign_up"
        android:textColor="#808080" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Sign in"
        android:id="@+id/btn_sign_up"
        android:background="@drawable/btn_signup_design"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#808080" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/line_hinttext">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My jobs"
        android:id="@+id/tv_unlogin_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:textSize="40dp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage your applicants and jobs here"
        android:id="@+id/tv_unlogin_hint"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/tv_unlogin_title"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    </LinearLayout>
</RelativeLayout>