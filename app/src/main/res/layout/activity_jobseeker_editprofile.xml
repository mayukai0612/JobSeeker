<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bgd">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line_actionbar2">



        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Cancle"
            android:id="@+id/btn_cancle"
            android:background="@drawable/btn_signup_design"
            android:textColor="#808080"
            android:textSize="16sp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit Profile"
        android:id="@+id/textView13"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginLeft="80dp" />



        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btn_save"
            android:background="@drawable/btn_signup_design"
            android:textColor="#808080"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:layout_gravity="right"
            android:layout_marginLeft="58dp" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="#c3bbbb"
        android:id="@+id/imageView3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/line_actionbar2" />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/line_ln"
    android:layout_below="@+id/line_fn"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lastname"
        android:id="@+id/tv_lable_ln"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_lable_fn"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_seeker_ln"
        android:layout_weight="1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="14sp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/line_userphoto"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/line_ln">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Photo"
        android:id="@+id/tv_lable_userphoto"
        android:layout_below="@+id/tv_lable_loc"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold" />
    <com.yukai.monash.student_seek.RoundImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@android:color/transparent"
        app:civ_border_width="2dp"
        app:civ_border_color="#000000"
        android:layout_above="@+id/tv_seeker_company"
        android:layout_alignEnd="@+id/tv_seeker_ln"
        android:layout_marginLeft="40dp"
        android:id="@+id/user_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tap to edit"
            android:id="@+id/tv_tap_to_edit"
            android:layout_alignTop="@+id/tv_lable_userphoto"
            android:layout_alignStart="@+id/tv_location"
            android:textColor="#e51111"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/line_fn"
    android:orientation="horizontal"
    android:layout_below="@+id/imageView3"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Firstname"
        android:id="@+id/tv_lable_fn"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_seeker_fn"
        android:layout_weight="1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="14sp" />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line_aboutme"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/line_userphoto">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About me"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <EditText android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="6"
        android:gravity="top|left"
        android:maxLines="10"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:layout_below="@+id/line_company"
            android:id="@+id/et_aboutme"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line_language"
        android:layout_below="@+id/line_aboutme"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Languages"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <EditText android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|left"
            android:maxLines="10"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:scrollbars="vertical"
            android:layout_below="@+id/line_company"
            android:id="@+id/et_language"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line_edu"
        android:layout_below="@+id/line_language"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />
        <EditText android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|left"
            android:maxLines="10"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:scrollbars="vertical"
            android:layout_below="@+id/line_company"
            android:id="@+id/et_education"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp" />


    </LinearLayout>
</RelativeLayout>
</ScrollView>