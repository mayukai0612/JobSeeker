<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bgd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/line_company"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_profile_company"
            android:text="company name"
            android:layout_below="@+id/tv_profile_location"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000" />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/companyprofile_profile_cover"
        android:layout_below="@+id/line_company"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line_employer"
        android:layout_below="@+id/image_view_seeker_icon">

    </LinearLayout>

    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="Edit Profile"
        android:id="@+id/btn_company_editprofile"
        android:background="@drawable/btn_signup_design"
        android:layout_below="@+id/companyprofile_profile_cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView9"
        android:text="Company profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:id="@+id/line9">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="About"
        android:id="@+id/textView19"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/companyprofile_icon"
        android:layout_alignStart="@+id/tv_companyprofile_aboutus"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/tv_companyprofile_aboutus"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/btn_company_editprofile"
        android:layout_marginTop="10dp">
    <com.yukai.monash.student_seek.RoundImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/favorite_icon"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/divider_grey"
        android:layout_marginLeft="10dp"
        android:id="@+id/companyprofile_icon"
        android:layout_alignTop="@+id/companyprofile_name"
        android:layout_alignStart="@+id/textView19" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/companyprofile_name"
    android:text="yukai ma"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/companyprofile_icon"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Log out"
        android:id="@+id/employer_logout"
        android:textColor="#fb0202"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@+id/line9" />

</RelativeLayout>
