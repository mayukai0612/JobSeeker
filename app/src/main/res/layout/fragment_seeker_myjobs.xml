<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bgd"
    android:focusable="false" android:focusableInTouchMode="false" android:descendantFocusability="blocksDescendants" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My jobs"
        android:id="@+id/tv_lable_myjobs"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_seeker_myjobs"
        android:layout_below="@+id/tv_lable_myjobs"
        android:layout_alignParentStart="true" />
</RelativeLayout>