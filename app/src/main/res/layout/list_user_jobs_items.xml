<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_applicants"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="jobtitle"
        android:id="@+id/tv_seeker_desc"
        android:layout_toRightOf="@+id/image_applicants"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginLeft="10dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="company"
        android:id="@+id/tv_seeker_company"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/image_applicants"
        android:layout_alignBottom="@+id/image_applicants"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@android:color/darker_gray"
        android:id="@+id/imageView3"
        android:layout_below="@+id/image_applicants"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:clickable="false"/>

</RelativeLayout>